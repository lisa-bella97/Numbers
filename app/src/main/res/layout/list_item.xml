<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_number_height"
    android:minWidth="@dimen/list_number_width">

    <TextView
        android:id="@+id/list_number_txt_view"
        android:layout_width="@dimen/list_number_width"
        android:layout_height="@dimen/list_number_height"
        android:gravity="center"
        android:textSize="@dimen/list_number_txt_size"
        tools:text="1"
        tools:textColor="@color/oddNumberColor">
    </TextView>
</LinearLayout>